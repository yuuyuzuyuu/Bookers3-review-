<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
        <table class="table">
          <theader>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </theader>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                <%= link_to book.user do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>