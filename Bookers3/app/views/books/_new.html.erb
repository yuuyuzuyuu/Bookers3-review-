<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% book.errors.full_messages.each do |message| %>
    <%= message%>
  <% end %>
<% end %>
<%= form_with model: book, local:true do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  <label for="book_body">Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>