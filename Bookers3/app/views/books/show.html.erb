<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>Edit</td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>