<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @booknew %>
    </div>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to edit_book_path(@book), class: "btn btn-primary btn-sm" do %>
                  Edit
                <% end %>
            </td>
            <td>
                <%= link_to book_path(@book), method: :delete, class: "btn btn-danger btn-sm" do %>
                  Destroy
                <% end %>
               <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      
  </div>
</div>